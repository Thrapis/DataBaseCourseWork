<Page x:Class="MobileOperatorApplication.Pages.RecommendationsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MobileOperatorApplication.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RecomendationsPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*"></ColumnDefinition>
            <ColumnDefinition Width="8*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Border BorderBrush="DarkRed" Background="MintCream" BorderThickness="0 0 1 0" Grid.Column="1">
            <ScrollViewer>
                <StackPanel x:Name="AllContainer">

                    <StackPanel x:Name="RecommendationsStack" Grid.Row="1">
                        <TextBlock Text="Tariff plan recommendations" FontSize="14" FontFamily="Unispace" Height="20" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <StackPanel x:Name="TariffRecommendations"></StackPanel>
                    </StackPanel>

                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>
